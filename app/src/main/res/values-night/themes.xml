<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue_app</item>
        <item name="colorPrimaryVariant">@color/dark_blue_app</item>
        <item name="colorOnPrimary">@color/white_app</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_app</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_mode_primary</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/white_app</item>
        <item name="colorSurface">@color/dark_mode_primary</item>
        <item name="colorOnSurface">@color/white_app</item>
    </style>
</resources>